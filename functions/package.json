{
  "name": "functions",
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write '{src,tests}/**/*.{js,ts}'  --print-width=180",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "deploy": "firebase deploy --only functions",
    "i_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha  --recursive tests/image_test.ts",
    "validator_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/validator_test.ts",
    "m_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/mail_template_test.ts",
    "ci_test": "yarn run i_tests && yarn run validator_tests && yarn run m_tests && yarn run svg_tests",
    "svg_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/svg_test.ts --timeout 30000",
    "tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/*_test.ts --timeout 30000",
    "e_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/express_test.ts",
    "o_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/order_test.ts",
    "oc_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/order_change_test.ts",
    "n_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/notify_test.ts --timeout 30000",
    "t_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/twilio_test.ts",
    "t2_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/twilio2_test.ts  --timeout 30000",
    "s_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/subaccount_test.ts",
    "mailtests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/sms_test.ts",
    "smaregitests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/smaregi_test.ts",
    "d_tests": "NODE_ENV=test tsx ./node_modules/mocha/bin/mocha --recursive tests/dl_test.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.864.0",
    "@sentry/node": "^10.4.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "google-libphonenumber": "^3.2.42",
    "i18next": "^25.3.4",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^7.0.5",
    "receiptline": "^1.16.2",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0",
    "twilio": "^5.8.0",
    "uuid-v4": "^0.1.0",
    "validator": "^13.15.15",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "chai": "^5.2.1",
    "chai-string": "^1.6.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "firebase-functions-test": "^3.4.1",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "private": true
}
