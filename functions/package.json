{
  "name": "functions",
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write '{src,tests}/**/*.{js,ts}'  --print-width=180",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "deploy": "firebase deploy --only functions",
    "i_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/image_test.ts",
    "validator_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/validator_test.ts",
    "m_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/mail_template_test.ts",
    "ci_test": "yarn run i_tests && yarn run validator_tests && yarn run m_tests && yarn run svg_tests",
    "svg_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/svg_test.ts --timeout 30000",
    "tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/*_test.ts --timeout 30000",
    "e_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/express_test.ts",
    "o_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/order_test.ts",
    "oc_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/order_change_test.ts",
    "n_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/notify_test.ts --timeout 30000",
    "t_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/twilio_test.ts",
    "t2_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/twilio2_test.ts  --timeout 30000",
    "s_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/subaccount_test.ts",
    "mailtests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/sms_test.ts",
    "smaregitests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/smaregi_test.ts",
    "d_tests": "NODE_ENV=test mocha -r ts-node/register  --recursive tests/dl_test.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.750.0",
    "@sentry/node": "^8.54.0",
    "cors": "^2.8.5",
    "express": "^4.17.12",
    "firebase-admin": "^13.1.0",
    "firebase-functions": "^6.3.2",
    "google-libphonenumber": "^3.2.40",
    "i18next": "^24.2.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.47",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.10.0",
    "receiptline": "^1.16.2",
    "sharp": "^0.33.5",
    "stripe": "^17.6.0",
    "twilio": "^5.4.5",
    "uuid-v4": "^0.1.0",
    "validator": "^13.7.0",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "chai": "^4.3.4",
    "chai-string": "^1.5.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "firebase-functions-test": "^3.4.0",
    "mocha": "^11.1.0",
    "prettier": "^3.5.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "private": true
}
