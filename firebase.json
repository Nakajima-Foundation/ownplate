{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "cp dist/index.html functions/templates/index.html",
      "cp src/config/constant.ts functions/src/common/constant.ts",
      "cp src/utils/phoneutil.ts functions/src/common/phoneutil.ts",
      "cp src/utils/commonUtils.ts functions/src/common/commonUtils.ts",
      "cp src/config/project.ts functions/src/common/project.ts",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "target": "app",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "/r/*",
        "function": "api"
      },
      {
        "source": "/r/*/menus/*",
        "function": "api"
      },
      {
        "source": "/r/*/order/*",
        "function": "api"
      },
      {
        "source": "/o/*",
        "function": "api"
      },
      {
        "source": "/1.0/**",
        "function": "api"
      },
      {
        "source": "/api/1.0/**",
        "function": "api"
      },
      {
        "source": "/api/2.0/**",
        "function": "api"
      },
      {
        "source": "/smaregi/1.0/**",
        "function": "api"
      },
      {
        "source": "/sitemap.xml",
        "function": "api"
      },
      {
        "source": "/m/**",
        "dynamicLinks": true
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
