{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "cp dist/index.html functions/templates/index.html",
      "cp src/config/constant.ts functions/src/common/constant.ts",
      "cp src/utils/phoneutil.ts functions/src/common/phoneutil.ts",
      "cp src/utils/commonUtils.ts functions/src/common/commonUtils.ts",
      "cp src/config/project.ts functions/src/common/project.ts",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": [{
    "target": "app",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
        "source": "**",
        "headers": [
          { "key" : "Content-Security-Policy", "value": "frame-ancestors 'none'"},
          { "key" : "X-Frame-Options", "value" : "deny" },
          { "key" : "X-Content-Type-Options", "value" : "nosniff" },
          { "key" : "X-XSS-Protection", "value" : "1; mode=block" },
          { "key" : "X-Permitted-Cross-Domain-Policies", "value" : "none" },
          { "key" : "Referrer-Policy", "value": "no-referrer" }
        ]
    }],    
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "/r/*",
        "function": "api"
      },
      {
        "source": "/r/*/menus/*",
        "function": "api"
      },
      {
        "source": "/r/*/order/*",
        "function": "api"
      },
      {
        "source": "/o/*",
        "function": "api"
      },
      {
        "source": "/1.0/**",
        "function": "api"
      },
      {
        "source": "/api/1.0/**",
        "function": "api"
      },
      {
        "source": "/api/2.0/**",
        "function": "api"
      },
      {
        "source": "/smaregi/1.0/**",
        "function": "api"
      },
      {
        "source": "/sitemap.xml",
        "function": "api"
      },
      {
        "source": "/m/**",
        "dynamicLinks": true
      },
      {
        "source": "/ss",
        "destination": "/ss.html"
      },
      {
        "source": "/ss/**",
        "destination": "/ss.html"
      },
      {
        "source": "/mo",
        "destination": "/mo.html"
      },
      {
        "source": "/mo/**",
        "destination": "/mo.html"
      },
      {
        "source": "/motest",
        "destination": "/motest.html"
      },
      {
        "source": "/motest/**",
        "destination": "/motest.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }],
  "storage": {
    "rules": "storage.rules"
  }
}
