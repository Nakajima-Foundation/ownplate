{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "cp dist/index.html functions/templates/index.html",
      "cp src/plugins/constant.js functions/src/common/constant.js",
      "cp src/plugins/phoneutil.js functions/src/common/phoneutil.js",
      "cp src/config/project.js functions/src/common/project.js",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/r/*",
        "function": "api"
      },
      {
        "source": "/r/*/menus/*",
        "function": "api"
      },
      {
        "source": "/1.0/**",
        "function": "api"
      },
      {
        "source": "/api/1.0/**",
        "function": "api"
      },
      {
        "source": "/sitemap.xml",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
